---
import { siteConfig } from '@config/site';

const currentYear = new Date().getFullYear();
---
<footer class="mt-24 bg-slate-950 text-slate-100">
  <div class="container section-padding grid gap-12 md:grid-cols-[1.4fr_1fr_1fr]">
    <div class="flex flex-col gap-5">
      <span class="inline-flex w-fit items-center gap-3 rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.3em]">
        {siteConfig.institution}
      </span>
      <h3 class="text-3xl font-black leading-tight md:text-4xl">
        {siteConfig.name}
      </h3>
      <p class="max-w-xl text-base text-slate-300">
        {siteConfig.description}
      </p>
      <div class="flex flex-wrap gap-4 text-sm font-medium text-slate-300">
        <span class="badge-pill border-white/20 bg-white/5 text-slate-100">
          {siteConfig.role}
        </span>
        <span class="badge-pill border-white/20 bg-white/5 text-slate-100">
          {siteConfig.location}
        </span>
      </div>
    </div>

    <div class="flex flex-col gap-4">
      <h4 class="text-sm font-semibold uppercase tracking-widest text-primary-200">
        Navegación
      </h4>
      <ul class="flex flex-col gap-3 text-base text-slate-300">
        <li><a href="/" class="transition hover:text-white">Inicio</a></li>
        <li><a href="/about" class="transition hover:text-white">Sobre mí</a></li>
        <li><a href="/experience" class="transition hover:text-white">Experiencia</a></li>
        <li><a href="/skills" class="transition hover:text-white">Habilidades</a></li>
        <li><a href="/contact" class="transition hover:text-white">Contacto</a></li>
      </ul>
    </div>

    <div class="flex flex-col gap-4">
      <h4 class="text-sm font-semibold uppercase tracking-widest text-primary-200">
        Contáctame
      </h4>
      <div class="flex flex-col gap-3 text-base text-slate-300">
        <a href={siteConfig.links.email} class="flex items-center gap-3 transition hover:text-white">
          <span class="badge-pill border-white/10 bg-white/5 text-xs font-semibold text-slate-200">
            Email
          </span>
          angiely.hinojosa@unsaac.edu.pe
        </a>
        <a href={siteConfig.links.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 transition hover:text-white">
          <span class="badge-pill border-white/10 bg-white/5 text-xs font-semibold text-slate-200">
            LinkedIn
          </span>
          linkedin.com/in/angiely-hinojosa
        </a>
        <a href={siteConfig.links.instagram} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 transition hover:text-white">
          <span class="badge-pill border-white/10 bg-white/5 text-xs font-semibold text-slate-200">
            Instagram
          </span>
          @angiely.fisica
        </a>
      </div>
      <a
        href={siteConfig.links.cv}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm font-semibold text-primary-200 transition hover:text-white"
      >
        Descargar CV actualizado
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 11l5 5 5-5" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v12" />
        </svg>
      </a>
    </div>
  </div>

  <div class="border-t border-white/10">
    <div class="container flex flex-col gap-4 py-6 text-sm text-slate-400 md:flex-row md:items-center md:justify-between">
      <p>&copy; {currentYear} {siteConfig.name}. Creado con dedicación para compartir el movimiento.</p>
      <p class="flex items-center gap-2">
        <span class="h-2 w-2 rounded-full bg-emerald-400"></span>
        Disponible para talleres y asesorías personalizadas.
      </p>
    </div>
  </div>
</footer>
