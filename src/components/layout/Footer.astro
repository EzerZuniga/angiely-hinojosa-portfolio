---
import { siteConfig } from "@config/site";

const currentYear = new Date().getFullYear();
const developerInstagram = "https://www.instagram.com/ezerzuniga.oficial16/";
---

<footer class="mt-16 bg-slate-950 text-slate-100">
  <div
    class="container grid gap-10 py-12 text-sm leading-relaxed md:grid-cols-[1.4fr_1fr_1fr] md:gap-14 md:py-16 md:text-base"
  >
    <div class="flex flex-col gap-5">
      <img
        src="/images/logo2.png"
        alt={`Logo de ${siteConfig.institution}`}
        loading="lazy"
        decoding="async"
        class="h-16 w-auto max-w-[220px] object-contain md:h-20"
      />
      <p class="max-w-xl text-slate-300 leading-relaxed">
        {siteConfig.description}
      </p>
      <div
        class="flex flex-wrap gap-4 text-xs font-medium text-slate-200 md:text-sm"
      >
        <span class="inline-flex items-center gap-2">
          <svg
            aria-hidden="true"
            class="h-3.5 w-3.5 text-primary-200 md:h-4 md:w-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 8.5 12 4l9 4.5-9 4.5-9-4.5Z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 10.5v3c0 .3.18.57.46.69L12 16l5.54-1.81A.75.75 0 0 0 18 13.5v-3"
            ></path>
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 16v3.5"
            ></path>
          </svg>
          {siteConfig.role}
        </span>
        <span class="inline-flex items-center gap-2">
          <svg
            aria-hidden="true"
            class="h-3.5 w-3.5 text-primary-200 md:h-4 md:w-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 21s7-4.35 7-10a7 7 0 0 0-14 0c0 5.65 7 10 7 10Z"></path>
            <circle cx="12" cy="11" r="2.5"></circle>
          </svg>
          {siteConfig.location}
        </span>
      </div>
    </div>

    <div class="flex flex-col gap-5">
      <h4
        class="text-[0.68rem] font-semibold uppercase tracking-[0.35em] text-primary-200 md:text-xs"
      >
        Navegación
      </h4>
      <ul class="flex flex-col gap-2 text-slate-300">
        <li><a href="/" class="hover:text-white">Inicio</a></li>
        <li><a href="/about" class="hover:text-white">Sobre mí</a></li>
        <li><a href="/experience" class="hover:text-white">Experiencia</a></li>
        <li><a href="/skills" class="hover:text-white">Habilidades</a></li>
        <li><a href="/contact" class="hover:text-white">Contacto</a></li>
      </ul>
    </div>

    <div class="flex flex-col gap-5">
      <h4
        class="text-[0.68rem] font-semibold uppercase tracking-[0.35em] text-primary-200 md:text-xs"
      >
        Contáctame
      </h4>
      <div class="flex items-center gap-5 text-slate-300">
        <a
          href={siteConfig.links.whatsapp}
          target="_blank"
          rel="noopener noreferrer"
          class="text-white transition hover:text-primary-200"
          aria-label="Contactar por WhatsApp"
        >
          <svg
            aria-hidden="true"
            class="h-7 w-7 md:h-8 md:w-8"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12.04 2C6.565 2 2.1 6.347 2.1 11.7c0 1.926.54 3.72 1.53 5.258L2 22l5.207-1.58a9.97 9.97 0 0 0 4.833 1.246c5.476 0 9.94-4.347 9.94-9.7C21.98 6.347 17.516 2 12.04 2Zm0 17.47c-1.56 0-3.055-.43-4.352-1.246l-.312-.188-3.082.934.915-3.014-.203-.31A8.07 8.07 0 0 1 4.24 11.7c0-4.215 3.49-7.64 7.8-7.64s7.8 3.425 7.8 7.64-3.49 7.64-7.8 7.64Zm4.258-5.56c-.23-.118-1.35-.664-1.56-.738-.21-.073-.362-.11-.514.11s-.59.738-.725.893c-.134.147-.268.165-.497.055-.23-.11-.97-.356-1.847-1.135-.68-.6-1.14-1.339-1.274-1.565-.134-.228-.014-.35.1-.463.105-.105.23-.274.344-.412.115-.138.153-.238.23-.396.076-.157.04-.294-.02-.412-.058-.118-.514-1.23-.705-1.695-.185-.444-.374-.383-.514-.39-.134-.008-.287-.01-.44-.01-.153 0-.402.057-.611.286-.21.227-.8.78-.8 1.9 0 1.12.822 2.204.936 2.353.115.147 1.62 2.576 3.927 3.485.548.233.976.372 1.309.476.55.175 1.05.15 1.446.09.442-.066 1.35-.553 1.54-1.084.19-.53.19-.985.134-1.084-.057-.098-.21-.157-.44-.274Z"
            ></path>
          </svg>
          <span class="sr-only">WhatsApp</span>
        </a>
        <a
          href={siteConfig.links.email}
          class="text-white transition hover:text-primary-200"
          aria-label="Enviar correo"
        >
          <svg
            aria-hidden="true"
            class="h-7 w-7 md:h-8 md:w-8"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2Z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m22 8-10 6L2 8"></path>
          </svg>
          <span class="sr-only">Correo electrónico</span>
        </a>
      </div>
      <div class="flex flex-col gap-3">
        <span
          class="text-[0.68rem] font-semibold uppercase tracking-[0.35em] text-primary-200 md:text-xs"
        >
          Redes sociales
        </span>
        <div class="flex items-center gap-5">
          <a
            href={siteConfig.links.facebook}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Angiely Hinojosa en Facebook"
            class="text-white transition hover:text-primary-200"
          >
            <svg
              aria-hidden="true"
              class="h-7 w-7 md:h-8 md:w-8"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M22 12.073C22 6.505 17.523 2 12 2S2 6.505 2 12.073c0 4.99 3.657 9.128 8.438 9.877v-6.987H8.077v-2.89h2.36V9.845c0-2.332 1.388-3.62 3.513-3.62.999 0 2.043.178 2.043.178v2.25h-1.151c-1.136 0-1.49.707-1.49 1.432v1.72h2.533l-.405 2.89h-2.128v6.987C18.343 21.201 22 17.063 22 12.073Z"
              ></path>
            </svg>
            <span class="sr-only">Facebook</span>
          </a>
          <a
            href={siteConfig.links.instagram}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Angiely Hinojosa en Instagram"
            class="text-white transition hover:text-primary-200"
          >
            <svg
              aria-hidden="true"
              class="h-7 w-7 md:h-8 md:w-8"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="3" width="18" height="18" rx="5"></rect>
              <path d="M12 8.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Z"></path>
              <circle cx="17" cy="7" r="1" fill="currentColor" stroke="none"
              ></circle>
            </svg>
            <span class="sr-only">Instagram</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="border-t border-white/10 text-xs md:text-sm">
    <div
      class="container flex flex-col gap-3 py-6 text-slate-400 md:flex-row md:items-center md:justify-between"
    >
      <p>
        &copy; {currentYear}
        {siteConfig.name}. Todos los derechos reservados.
      </p>
      <div
        class="flex flex-col gap-4 text-sm text-slate-400 md:flex-row md:items-center md:gap-6"
      >
        <p>
          Desarrollado por
          <a
            href={developerInstagram}
            target="_blank"
            rel="noopener noreferrer"
            class="font-semibold text-primary-200 hover:text-white"
          >
            Ezer Zuniga
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
