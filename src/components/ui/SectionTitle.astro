---
interface Props {
  title: string;
  subtitle?: string;
  eyebrow?: string;
  align?: 'left' | 'center' | 'right';
  class?: string;
}

const {
  title,
  subtitle,
  eyebrow,
  align = 'center',
  class: className = '',
} = Astro.props;

const alignment = {
  left: 'text-left items-start',
  center: 'text-center items-center',
  right: 'text-right items-end',
} as const;

const wrapperClasses = [`mb-14 flex flex-col gap-4`, alignment[align], className]
  .filter(Boolean)
  .join(' ');

const textWidth = align === 'center' ? 'max-w-2xl mx-auto' : 'max-w-2xl';

---

<div class={wrapperClasses}>
  {eyebrow && (
    <span class={`inline-flex items-center gap-2 text-sm uppercase tracking-[0.3em] text-primary-600 ${align === 'center' ? 'justify-center' : ''}`}>
      <span class="h-[2px] w-6 rounded-full bg-primary-500"></span>
      {eyebrow}
    </span>
  )}
  <h2 class={`text-3xl md:text-4xl font-black text-gray-900 leading-tight ${textWidth}`}>
    {title}
  </h2>
  {subtitle && (
    <p class={`text-lg md:text-xl text-gray-600 leading-relaxed ${textWidth}`}>
      {subtitle}
    </p>
  )}
</div>
