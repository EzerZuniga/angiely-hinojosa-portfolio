---
interface Props {
  title: string;
  subtitle?: string;
  eyebrow?: string;
  align?: "left" | "center" | "right";
  class?: string;
  titleClass?: string;
}

const {
  title,
  subtitle,
  eyebrow,
  align = "center",
  class: className = "",
  titleClass = "",
} = Astro.props;

const alignment = {
  left: "text-left items-start",
  center: "text-center items-center",
  right: "text-right items-end",
} as const;

const wrapperClasses = [
  `mb-8 md:mb-12 flex flex-col gap-3`,
  alignment[align],
  className,
]
  .filter(Boolean)
  .join(" ");

const textWidth = align === "center" ? "max-w-2xl mx-auto" : "max-w-2xl";
---

<div class={wrapperClasses}>
  {
    eyebrow && (
      <span
        class={`inline-flex items-center gap-2 text-xs md:text-sm uppercase tracking-[0.25em] font-bold text-primary-600 ${align === "center" ? "justify-center" : ""}`}
      >
        <span class="h-[2px] w-6 rounded-full bg-primary-500" />
        {eyebrow}
      </span>
    )
  }
  <h2
    class={`text-2xl md:text-3xl font-black text-gray-900 leading-tight ${textWidth} ${titleClass}`}
  >
    {title}
  </h2>
  {
    subtitle && (
      <p
        class={`text-sm md:text-base text-gray-600 leading-relaxed ${textWidth}`}
      >
        {subtitle}
      </p>
    )
  }
</div>
