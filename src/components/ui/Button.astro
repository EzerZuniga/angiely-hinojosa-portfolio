---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  external?: boolean;
  fullWidth?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  type = 'button',
  external = false,
  fullWidth = false,
} = Astro.props;

const baseStyles =
  'inline-flex items-center justify-center gap-2 font-semibold rounded-full transition-transform duration-150 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-500 active:translate-y-[1px] disabled:cursor-not-allowed disabled:opacity-60';

const variants = {
  primary:
    'bg-gradient-to-r from-primary-500 via-primary-500 to-emerald-500 text-white shadow-lg shadow-primary-500/20 hover:shadow-xl hover:brightness-105',
  secondary:
    'bg-gray-900 text-white shadow-lg shadow-gray-900/10 hover:bg-gray-800',
  outline:
    'border border-primary-500 text-primary-600 hover:bg-primary-50 hover:text-primary-700 bg-white',
  ghost: 'text-gray-700 hover:text-primary-600 hover:bg-primary-50',
} as const;

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-2.5 text-base',
  lg: 'px-8 py-3 text-lg',
  xl: 'px-10 py-3.5 text-xl',
} as const;

const classes = [
  baseStyles,
  variants[variant] ?? variants.primary,
  sizes[size] ?? sizes.md,
  fullWidth ? 'w-full justify-center' : '',
  className,
]
  .filter(Boolean)
  .join(' ');

---

{href ? (
  <a
    href={href}
    class={classes}
    target={external ? '_blank' : undefined}
    rel={external ? 'noopener noreferrer' : undefined}
  >
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
