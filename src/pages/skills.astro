---
import BaseLayout from '@layouts/BaseLayout.astro';
import SectionTitle from '@components/ui/SectionTitle.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';

const certificates = await Astro.glob('../content/certificates/*.md');
const CertificateContent = certificates[0]?.Content;

const skillGroups = [
  {
    category: 'Capacidades físicas',
    emphasis: 'Velocidad · Fuerza · Resistencia · Flexibilidad',
    items: [
      { name: 'Planificación de microciclos', level: 'Avanzado' },
      { name: 'Evaluaciones funcionales (Cooper, Course Navette, salto)', level: 'Avanzado' },
      { name: 'Prevención de lesiones', level: 'Intermedio' },
    ],
  },
  {
    category: 'Metodologías pedagógicas',
    emphasis: 'Aprendizaje cooperativo · Gamificación · Inclusión',
    items: [
      { name: 'Diseño de sesiones vivenciales', level: 'Avanzado' },
      { name: 'Evaluación formativa y rúbricas', level: 'Avanzado' },
      { name: 'Adaptaciones curriculares', level: 'Intermedio' },
    ],
  },
  {
    category: 'Herramientas y recursos',
    emphasis: 'Planillas RPE · Apps de seguimiento · Videoanálisis',
    items: [
      { name: 'Planillas Google & Excel', level: 'Avanzado' },
      { name: 'CoachNow, MyFitnessPal', level: 'Intermedio' },
      { name: 'Diseño de materiales didácticos', level: 'Avanzado' },
    ],
  },
  {
    category: 'Competencias socioemocionales',
    emphasis: 'Comunicación · Liderazgo · Trabajo en equipo',
    items: [
      { name: 'Facilitación de grupos', level: 'Avanzado' },
      { name: 'Gestión de conflictos', level: 'Intermedio' },
      { name: 'Acompañamiento individual', level: 'Avanzado' },
    ],
  },
];

const methodologies = [
  {
    title: 'Diseño de sesiones',
    steps: ['Diagnóstico inicial', 'Objetivos SMART', 'Selección de métodos activos', 'Evaluación formativa'],
  },
  {
    title: 'Acompañamiento a equipos',
    steps: ['Análisis de contexto', 'Plan semanal compartido', 'Retroalimentación inmediata', 'Reporte de progreso mensual'],
  },
];

---

<BaseLayout
  title="Habilidades y certificaciones | Angiely Hinojosa"
  description="Habilidades técnicas, pedagógicas y certificaciones de Angiely Hinojosa, estudiante de Educación Física en la UNSAAC enfocada en bienestar integral."
>
  <section class="section-padding">
    <div class="container flex flex-col gap-16">
      <SectionTitle
        eyebrow="Perfil profesional"
        title="Habilidades que conectan ciencia, pedagogía y pasión por el movimiento"
        subtitle="Combino conocimientos técnicos en entrenamiento con metodologías activas y habilidades socioemocionales."
      />

      <div class="grid gap-6 md:grid-cols-2">
        {skillGroups.map((group) => (
          <Card hover padding="lg" class="bg-white">
            <div class="flex flex-col gap-4">
              <div>
                <h3 class="text-xl font-semibold text-slate-900">{group.category}</h3>
                <p class="text-sm font-medium uppercase tracking-[0.3em] text-primary-500">{group.emphasis}</p>
              </div>
              <ul class="flex flex-col gap-3 text-sm text-slate-600">
                {group.items.map((item) => (
                  <li class="flex items-center justify-between rounded-2xl border border-slate-200 px-4 py-3">
                    <span>{item.name}</span>
                    <span class="rounded-full bg-primary-50 px-3 py-1 text-xs font-semibold text-primary-600">
                      {item.level}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-slate-900 text-white">
    <div class="container grid gap-10 lg:grid-cols-[1fr_1fr]">
      <div class="flex flex-col gap-6">
        <SectionTitle
          eyebrow="Metodología"
          align="left"
          title="Planifico con propósito, evalúo con datos y acompaño con empatía"
          subtitle="Cada proceso se ajusta a la realidad de la institución, equipo o persona."
          class="!text-left"
        />
        <div class="grid gap-6">
          {methodologies.map((method) => (
            <Card padding="lg" class="bg-white/10 text-left">
              <h3 class="text-lg font-semibold text-white">{method.title}</h3>
              <ol class="mt-4 space-y-3 text-sm text-slate-200">
                {method.steps.map((step, index) => (
                  <li class="flex items-start gap-3">
                    <span class="flex h-7 w-7 items-center justify-center rounded-full bg-white/10 text-xs font-semibold text-primary-200">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                    <span>{step}</span>
                  </li>
                ))}
              </ol>
            </Card>
          ))}
        </div>
      </div>

      <Card padding="lg" class="bg-white text-slate-900">
        <h3 class="text-xl font-semibold text-slate-900">Certificaciones y cursos clave</h3>
        <p class="mt-2 text-sm text-slate-600">
          Actualizo constantemente mis conocimientos para ofrecer experiencias seguras, motivadoras y basadas en evidencia.
        </p>
        <div class="mt-6 max-h-[28rem] space-y-4 overflow-y-auto pr-2 text-sm text-slate-600">
          {CertificateContent && <CertificateContent />}
        </div>
        <Button href="/contact" variant="primary" size="md" class="mt-6 w-full">
          Solicitar talleres o asesorías
        </Button>
      </Card>
    </div>
  </section>
</BaseLayout>
